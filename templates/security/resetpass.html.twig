{% extends "base.html.twig" %}


{% block title %}
Réinitialiser le mot de passe
{% endblock %}

{% block main %} 
    <div class="container">
        <h1 class="form-title">Réinitialiser le mot de passe</h1>
        <form action="{{ path('reset_pass', {'token': token}) }}" method="post">
            <div class="form-group">
                <input placeholder="Mot de passe..." required name="_password" type="password" class="form-control">
            </div>
            <div class="form-group">
                <input placeholder="Confirmez le mot de passe..." required name="_confirm_password" type="password" class="form-control">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary mr-2 copyable">Réinitialiser le mot de passe</button>
            </div>
        </form>
    </div>
{% endblock %}
